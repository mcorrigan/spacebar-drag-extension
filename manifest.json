{
    "manifest_version": 2,
    "name": "Spacebar Drag",
    "version": "1.0",
    "description": "Use spacebar to scroll the window around with precision.",
    "permissions": ["activeTab","storage"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  